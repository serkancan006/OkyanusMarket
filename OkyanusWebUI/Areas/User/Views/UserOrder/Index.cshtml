@model List<OkyanusWebUI.Areas.Admin.Models.AdminOrderVM.ResultAdminOrderVM>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int count = 0;
}


<div class="container">
    <!-- Page Heading -->
    <h2 class="h3 mb-2 text-gray-800">Siparişleriniz</h2>
    <br />

    @if(Model != null && Model.Count > 0)
    {
        <!-- DataTales Example -->
        <div class="card shadow ">
            <div class="card-header py-3 d-flex justify-content-between align-items-center">
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Sipariş Durumu</th>
                                <th>Tarih</th>
                                <th>Teslimat</th>
                                <th>Ödeme Tipi</th>
                                <th>Detay</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@item.orderStatus</td>
                                    <td>@item.createdDate.ToString("dd-MMM-yyyy HH:mm")</td>
                                    <td>@item.teslimatYontemi</td>
                                    <td>@item.orderPaymentType</td>
                                    <td><a href="/User/UserOrder/UserOrderDetail/@item.id" class="btn btn-warning">Detaylar</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <h5>Hiç Siparişiniz Bulunmamaktadır</h5>
    }
</div>


