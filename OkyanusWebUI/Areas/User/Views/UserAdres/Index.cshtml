@model List<OkyanusWebUI.Models.UserAdresVM.ResultUserAdresVM>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int count = 0;
}


<div class="container">
    <!-- Page Heading -->
    <h2 class="h3 mb-2 text-gray-800">Adresleriniz</h2>
    <br />

    <!-- DataTales Example -->
    <div class="card shadow ">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Tam Adres</th>
                            <th>Şehir</th>
                            <th>İlçe</th>
                            <th>Güncelle</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>@item.UserAdress</td>
                                <td>@item.UserSehir</td>
                                <td>@item.UserIlce</td>
                                <td><a href="/User/UserAdres/UpdateUserAdres/@item.ID" class="btn btn-warning">Güncelle</a></td>
                                <td><a href="/User/UserAdres/DeleteUserAdres/@item.ID" class="btn btn-danger">Sil</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/User/UserAdres/AddUserAdres/" class="btn btn-info" style="background-color: dodgerblue">Yeni Adres Ekle</a>
                <br /><br />
            </div>
        </div>
    </div>
</div>


