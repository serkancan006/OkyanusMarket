@model List<OkyanusWebUI.Models.FavoriUrunlerVM.ResultFavoriUrunlerVM>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="product">
    <div class="container">
        <div class="spec ">
            <h3>Favori Ürünler</h3>
            <div class="ser-t">
                <b></b>
                <span><i></i></span>
                <b class="line"></b>
            </div>
        </div>
        @if (Model != null && Model.Count > 0)
        {
            <!--content-->
            <div class="con-w3l">
                @foreach (var item in Model)
                {
                    <div class="col-md-3 pro-1">
                        <div class="col-m">
                            <a style="cursor:pointer" onclick="openProductDetailModal('@item.ProductID')" data-toggle="modal" data-target="#productDetailModal" class="offer-img">
                                <img src="@(item.Product.ImageUrl ?? "/web/images/resimhazirlaniyor.png")" class="img-responsive" style="height:123.75px;object-fit:contain;">
                                <div class="offer"><p><span>İndirimde</span></p></div>
                            </a>
                            <div class="mid-1">
                                <div class="women">
                                    <h6>@(item.Product.ProductName.Length > 20 ? item.Product.ProductName.Substring(0, 20) : item.Product.ProductName)</h6> <!-- Ürün ismi ve ağırlığı -->
                                </div>
                                <div class="mid-2">
                                    <p><label>&#8378;@item.Product.Price</label><em class="item_price">&#8378;@item.Product.DiscountedPrice</em></p> <!-- Normal ve indirimli fiyat -->
                                    <div class="block">
                                        <a class="btn btn-danger btn-sm" href="/User/FavoriUrunler/DeleteFavoriUrunler/@item.ID">x</a>
                                    </div>
                                    <div class="clearfix"></div>
                                </div>
                                <div class="add add-2">
                                    <button class="btn btn-danger my-cart-btn my-cart-b" onclick="addBasket('@item.ProductID')">Sepete Ekle</button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                <div class="clearfix"></div>
            </div>
        }
        else
        {
            <h5>Favori Ürününüz Bulunmamaktadır.</h5>
        }
    </div>
</div>
