@model List<OkyanusWebUI.Areas.Admin.Models.AdminOrderVM.ResultAdminOrderVM>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
    int count = 0;
}


<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Kategori Sayfası</h1>
<p class="mb-4">
    Siparişler ile ilgili işlemlerinizi Siparişler tablosundan yönetebilirsiniz
</p>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Alıcı</th>
                        <th>Telefon</th>
                        <th>Fiyat</th>
                        <th>Tarih</th>
                        <th>Durum</th>
                        <th>İşlem</th>
                        <th>Detay</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td>@count</td>
                            <td>@item.orderFirstName @item.orderSurname</td>
                            <td>@item.orderPhone</td>
                            <td>@item.totalPrice</td>
                            <td>@item.createdDate.ToString("dd-MMM-yyyy HH:mm")</td>
                            <td>@item.orderStatus</td>
                            <td>
                                <div class="btn-group" role="group" aria-label="Basic example">
                                    <a href="/Admin/Orders/OrderStatusOnay/@item.id" class="btn-sm btn btn-primary">Onayla</a>
                                    <a href="/Admin/Orders/OrderStatusHazirlama/@item.id" class="btn-sm btn btn-warning">Hazırla</a>
                                    <a href="/Admin/Orders/OrderStatusYolda/@item.id" class="btn-sm btn btn-info">Yolda</a>
                                    <a href="/Admin/Orders/OrderStatusTeslim/@item.id" class="btn-sm btn btn-secondary">Teslim</a>
                                    <a href="/Admin/Orders/OrderStatusIptal/@item.id" class="btn-sm btn btn-danger">İptal</a>
                                </div>
                            </td>
                            <td><a href="/Admin/Orders/DetailOrder/@item.id" class="btn-sm btn-warning">Detaylar</a></td>
                            <td><a href="/Admin/Orders/DeleteOrder/@item.id" class="btn-sm btn-danger" onclick="return confirm('Dikkat Siparişi Silmek istediğinize emin misiniz? Sipariş silindiğinde siparişe ait detaylarda silinir!');">Sil</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

