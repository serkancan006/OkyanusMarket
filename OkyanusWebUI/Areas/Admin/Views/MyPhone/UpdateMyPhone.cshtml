@model UpdateMyPhoneVM
@{
    ViewData["Title"] = "UpdateMyPhone";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<div class="container">
    <form method="post">
        <input type="hidden" asp-for="ID" />

        <label>Telefon Türü</label>
        <input type="text" asp-for="PhoneName" class="form-control" />
        <span class="text-danger" asp-validation-for="PhoneName"></span>
        <br />

        <label>Telefon Numarası</label>
        <input type="text" asp-for="PhoneNumber" class="form-control" />
        <span class="text-danger" asp-validation-for="PhoneNumber"></span>
        <br />

        <button class="btn btn-primary">Telefon Güncelle</button>
    </form>
</div>

