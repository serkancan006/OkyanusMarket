@model List<OkyanusWebUI.Areas.Admin.Models.AdminGroupVM.ResultGroupVM>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
    int count = 0;
}


<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Kategori Sayfası</h1>
<p class="mb-4">
    Kategori ile ilgili işlemlerinizi Kategori tablosundan yönetebilirsiniz
</p>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Kategori Adı</th>
                        <th>Açıklaması</th>
                        <th>Detaylar</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td>@count</td>
                            <td>@item.GRUPADI</td>
                            <td><a href="/Admin/Category/UpdateCategory/@item.ID" class="btn btn-warning">Detaylar</a></td>
                            <td><a href="/Admin/Category/DeleteCategory/@item.ID" class="btn btn-danger"  onclick="return confirm('Dikkat Silmek istediğinize emin misiniz? Kategori silindiğinde ürünlere ait kategorileride silinir!!!');">Sil</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <a href="/Admin/Category/AddCategory/" class="btn btn-primary">Yeni Kategori Ekle</a>
        </div>
    </div>
</div>


