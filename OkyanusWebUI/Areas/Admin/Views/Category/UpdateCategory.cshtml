@model OkyanusWebUI.Areas.Admin.Models.AdminGroupVM.UpdateGroupVM
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}


<div class="container">
    <img src="@(Model.ImageUrl ?? "/web/images/resimhazirlaniyor.png")" style="height:200px;width:200px;object-fit:cover;" />
    <form  method="post">
        <input type="hidden" asp-for="ImageUrl" value="@Model.ImageUrl" />

        <label>Kategori Adı</label>
        <input type="text" asp-for="GRUPADI" class="form-control" />
        <span class="text-danger" asp-validation-for="GRUPADI"></span>
        <br />

        <label>Grup Açıklaması isteğe bağlı</label>
        <input type="text" asp-for="Description" class="form-control" />
        <span class="text-danger" asp-validation-for="Description"></span>
        <br />

        @*<label>Ana Grup Kodu Giriniz</label>*@
        <input type="hidden" asp-for="ANAGRUP" class="form-control" />
        <span class="text-danger" asp-validation-for="ANAGRUP"></span>
        @*<br />*@

        @*<label>Alt Grup-1 Kodu Giriniz</label>*@
        <input type="hidden" asp-for="ALTGRUP1" class="form-control" />
        <span class="text-danger" asp-validation-for="ALTGRUP1"></span>
        @*<br />*@

        @*<label>Alt Grup-2 Kodu Giriniz</label>*@
        <input type="hidden" asp-for="ALTGRUP2" class="form-control" />
        <span class="text-danger" asp-validation-for="ALTGRUP2"></span>
        @*<br />*@

        @*<label>Alt Grup-3 Kodu Giriniz</label>*@
        <input type="hidden" asp-for="ALTGRUP3" class="form-control" />
        <span class="text-danger" asp-validation-for="ALTGRUP3"></span>
        @*<br />*@

        <button type="submit" class="btn btn-primary">Kategori Güncelle</button>
    </form>
</div>



