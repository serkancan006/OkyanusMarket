@model List<ResultContactVM>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
    int count = 0;
}


<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">İletişim Sayfası</h1>
<p class="mb-4">
    İletişim ile ilgili işlemlerinizi İletişim tablosundan yönetebilirsiniz
</p>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>İletişim Yazısı</th>
                        <th>Adres</th>
                        <th>Mail Adresi</th>
                        <th>Telefon No</th>
                        <th>Detaylar</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td>@count</td>
                            <td>@item.Title</td>
                            <td>@item.Adres</td>
                            <td>@item.Mail</td>
                            <td>@item.Phone</td>
                            <td><a href="/Admin/Contact/UpdateContact/@item.ID" class="btn btn-warning">Detaylar</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
