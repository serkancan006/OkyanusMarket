@model List<ResultSocialMediaVM>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
    int count = 0;
}


<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Sosyal Medya Sayfası</h1>
<p class="mb-4">
    Sosyal Medya ile ilgili işlemlerinizi Sosyal Medya tablosundan yönetebilirsiniz
</p>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Sosyal Medya Adı</th>
                        <th>Sosyal Medya Url</th>
                        <th>Detaylar</th>
                        @*<th>Sil</th>*@
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td>@count</td>
                            <td>@item.MediaName</td>
                            <td>@item.MediaUrl</td>
                            <td><a href="/Admin/SocialMedia/UpdateSocialMedia/@item.ID" class="btn btn-warning">Detaylar</a></td>
                            @*<td><a href="/Admin/SocialMedia/DeleteSocialMedia/@item.ID" class="btn btn-danger">Sil</a></td>*@
                        </tr>
                    }
                </tbody>
            </table>
            @*<a href="/Admin/SocialMedia/AddSocialMedia/" class="btn btn-primary">Yeni Telefon Ekle</a>*@
        </div>
    </div>
</div>


