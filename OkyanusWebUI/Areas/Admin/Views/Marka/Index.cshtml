@model List<OkyanusWebUI.Models.MarkaVM.ResultMarkaVM>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
    int count = 0;
}

<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Marka Sayfası</h1>
<p class="mb-4">
    Marka ile ilgili işlemlerinizi Marka tablosundan yönetebilirsiniz
</p>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Marka Adı</th>
                        <th>Detaylar</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td>@count</td>
                            <td>@item.MarkaAdı</td>
                            <td><a href="/Admin/Marka/UpdateMarka/@item.ID" class="btn btn-warning">Detaylar</a></td>
                            <td><a href="/Admin/Marka/DeleteMarka/@item.ID" class="btn btn-danger" onclick="return confirm('Dikkat Marka sildiğinizde Markaya ait bütün ürünler silinir!');">Sil</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <a href="/Admin/Marka/AddMarka/" class="btn btn-primary">Yeni Marka Ekle</a>
        </div>
    </div>
</div>



