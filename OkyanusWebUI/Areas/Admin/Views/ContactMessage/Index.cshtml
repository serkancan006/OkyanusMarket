@model List<ResultContactMessageVM>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
    int count = 0;
}


<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Mesajlar Sayfası</h1>
<p class="mb-4">
    Mesajlar ile ilgili işlemlerinizi Mesajlar tablosundan yönetebilirsiniz
</p>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Adı</th>
                        <th>Mail Adresi</th>
                        <th>Mesaj</th>
                        <th>Tarih</th>
                        <th>Detaylar</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td>@count</td>
                            <td>@item.Name</td>
                            <td>@item.Email</td>
                            <td>@(item.Message.Length > 20 ? item.Message.Substring(0, 20)+"..." : item.Message)</td>
                            <td>@item.CreatedDate.ToString("dd-MMM-yyyy HH:mm")</td>
                            <td><a href="/Admin/ContactMessage/DetailContactMessage/@item.ID" class="btn btn-warning">Detaylar</a></td>
                            <td><a href="/Admin/ContactMessage/DeleteContactMessage/@item.ID" class="btn btn-danger">Sil</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
