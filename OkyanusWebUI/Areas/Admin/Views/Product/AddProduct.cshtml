@model CreateProductVM
@using OkyanusWebUI.Models.ProductVM

@{
    ViewData["Title"] = "AddProduct";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<div class="container">
    <form method="post">

        <label>Ürün Adı</label>
        <input type="text" asp-for="ProductName" class="form-control" />
        <br />

        <label>Ürün Başlık</label>
        <input type="text" asp-for="Title" class="form-control" />
        <br />

        <label>Ürün Fiyatı</label>
        <input type="number" step="0.01" asp-for="Price" class="form-control" />
        <br />

        <label>Ürün İndirimli Fiyat (indirim vermek istediğiniz ürün için girin)</label>
        <input type="number" step="0.01" asp-for="DiscountedPrice" class="form-control" />
        <br />

        @*<label>Ürün Resmi</label>
        <input type="text" asp-for="ImageUrl" class="form-control" />
        <br />*@

        <label>Ürün Tipi</label>
        <select asp-for="ProductType" class="form-control">
            @*<option value="">Seçiniz</option>*@
            @foreach (var item in Enum.GetValues(typeof(Birim)))
            {
                <option value="@item">@item</option>
            }
        </select>
        <br />

        <label>Ürün Açıklaması</label>
        <input type="text" asp-for="Description" class="form-control" />
        <br />

        <label>Grubu</label>
        <input type="text" asp-for="GroupID" class="form-control" />
        <br />

        <label>Ürün Markası</label>
        <input type="text" asp-for="Marka" class="form-control" />
        <br />

        <label>Ürün Ana Barkodu</label>
        <input type="text" asp-for="AnaBarcode" class="form-control" />
        <br />

        <button class="btn btn-primary">Ürün Ekle</button>
    </form>
</div>

