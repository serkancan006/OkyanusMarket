@model CreateProductVM
@using OkyanusWebUI.Models.ProductVM

@{
    ViewData["Title"] = "AddProduct";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<div class="container">
    <form method="post">

        <label>Ürün Adı</label>
        <input type="text" asp-for="ProductName" class="form-control" />
        <span class="text-danger" asp-validation-for="ProductName"></span>
        <br />


        <label>Ürün Fiyatı</label>
        <input type="number" step="0.01" asp-for="Price" class="form-control" />
        <span class="text-danger" asp-validation-for="Price"></span>
        <br />

        <label>Ürün İndirimli Fiyat (indirim vermek istediğiniz ürün için girin)</label>
        <input type="number" step="0.01" asp-for="DiscountedPrice" class="form-control" />
        <span class="text-danger" asp-validation-for="DiscountedPrice"></span>
        <br />

        @*<label>Ürün Resmi</label>
        <input type="text" asp-for="ImageUrl" class="form-control" />
        <br />*@

        <label>Ürün Tipi</label>
        @*<input type="number" asp-for="ProductTypeID" class="form-control" />*@
        <select asp-for="ProductTypeID" class="form-control" asp-items="@ViewBag.ProductTypeSelectListItems"></select>
        <span class="text-danger" asp-validation-for="ProductTypeID"></span>
        <br />

        <label>Ürün Açıklaması</label>
        <input type="text" asp-for="Description" class="form-control" />
        <span class="text-danger" asp-validation-for="Description"></span>
        <br />

        <label>Grubu</label>
        <input type="text" asp-for="GrupAdı" class="form-control" />
        <span class="text-danger" asp-validation-for="GrupAdı"></span>
        <br />

        <label>Ürün Markası</label>
        @*<input type="text" asp-for="MarkaID" class="form-control" />*@
        <select asp-for="MarkaID" class="form-control" asp-items="@ViewBag.MarkaSelectListItems"></select>
        <span class="text-danger" asp-validation-for="MarkaID"></span>
        <br />

        <label>Ürün Ana Barkodu</label>
        <input type="text" asp-for="AnaBarcode" class="form-control" />
        <span class="text-danger" asp-validation-for="AnaBarcode"></span>
        <br />

        <label>Ürün Stock</label>
        <input type="number" min="0" step="1" asp-for="Stock" class="form-control" />
        <span class="text-danger" asp-validation-for="Stock"></span>
        <br />

        <button class="btn btn-primary">Ürün Ekle</button>
    </form>
</div>

