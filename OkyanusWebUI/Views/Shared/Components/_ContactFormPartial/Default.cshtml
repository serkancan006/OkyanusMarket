@model CreateContactMessageVM

<div>
    <form method="post" asp-action="SendContactMessage" asp-controller="Contact">
        <input type="text" asp-for="Name" placeholder="Adınız" class="form-control">
        <input type="email" placeholder="Mailiniz" asp-for="Email" class="form-control">
        <textarea placeholder="Mesajınız..." class="form-control" asp-for="Message" ></textarea>
        <input value="Gönder" type="submit"/>
    </form>
</div>
