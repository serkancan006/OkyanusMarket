@model List<ResultProductVM>

@if (Model != null && Model.Count > 0 )
{
    <!--content-->
    <div class="product">
        <div class="container">
            <div class="spec ">
                <h3>İndirimli Ürünler</h3>
                <div class="ser-t">
                    <b></b>
                    <span><i></i></span>
                    <b class="line"></b>
                </div>
            </div>

            <div class="con-w3l">
                @foreach (var item in Model)
                {
                    <div class="col-md-3 pro-1">
                        <div class="col-m">
                            <a href="" data-toggle="modal" data-target="#myModal_@item.ID" class="offer-img">
                                <img src="@(item.ImageUrl ?? "/web/images/resimhazirlaniyor.png")" class="img-responsive" alt="">
                                <div class="offer"><p><span>İndirimde</span></p></div>
                            </a>
                            <div class="mid-1">
                                <div class="women">
                                    <h6>@(item.ProductName.Length > 20 ? item.ProductName.Substring(0, 20) : item.ProductName)</h6> <!-- Ürün ismi ve ağırlığı -->
                                </div>
                                <div class="mid-2">
                                    <p><label>&#8378;@item.Price</label><em class="item_price">&#8378;@item.DiscountedPrice</em></p> <!-- Normal ve indirimli fiyat -->
                                    <div class="clearfix"></div>
                                </div>
                                <div class="add add-2">
                                    <button class="btn btn-danger my-cart-btn my-cart-b" onclick="addBasket('@item.ID')">Sepete Ekle</button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                <div class="clearfix"></div>
            </div>

        </div>
    </div>


    <div>
        <!-- product -->
        @foreach (var item in Model)
        {
            <div class="modal fade" id="myModal_@item.ID" tabindex="-1" role="dialog" aria-labelledby="myModalLabel_@item.ID">
                <div class="modal-dialog" role="document">
                    <div class="modal-content modal-info">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        </div>
                        <div class="modal-body modal-spa">
                            <div class="col-md-5 span-2">
                                <div class="item">
                                    <img src="@(item.ImageUrl ?? "/web/images/resimhazirlaniyor.png")" class="img-responsive" alt="">
                                </div>
                            </div>
                            <div class="col-md-7 span-1 ">
                                <h3>@item.ProductName</h3> <!-- Ürün ismi ve ağırlığı -->
                                <p class="in-para">@item.Description</p> <!-- Ürün açıklaması -->
                                <div class="price_single">
                                    <span class="reducedfrom"><del>&#8378;@item.Price</del> &#8378;@item.DiscountedPrice</span> <!-- Normal ve indirimli fiyat -->
                                    <div class="clearfix"></div>
                                </div>
                                <h4 class="quick">Detaylar:</h4>
                                <p class="quick_desc">@item.Title</p> <!-- Hızlı genel bakış -->
                                <div class="add-to">
                                    <button class="btn btn-danger my-cart-btn my-cart-btn1" onclick="addBasket('@item.ID')">Sepete Ekle</button> <!-- Ürün ID'si, ismi ve indirimli fiyatı -->
                                </div>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
